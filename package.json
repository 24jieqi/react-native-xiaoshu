{
  "name": "@fruits-chain/react-native-xiaoshu",
  "description": "React Native UI library",
  "version": "0.0.9",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "react-native": "src/index.ts",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "lib/",
    "src/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hjfruit/react-native-xiaoshu"
  },
  "bugs": {
    "url": "https://github.com/hjfruit/react-native-xiaoshu/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "android": "react-native run-android",
    "android:demo": "cd android && ./gradlew assembleRelease",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "commit": "npx git-cz",
    "ncu": "npx npm-check-updates -u -x react,react-native,react-test-renderer,typescript",
    "lint:ts": "tsc --noEmit && eslint src --ext .ts,.tsx",
    "prettier": "prettier --write '{src,demo}/**/*.{js,json,yml,yaml,ts,tsx,md}'",
    "lint-staged": "lint-staged --allow-empty",
    "doc": "dumi dev",
    "doc:build": "dumi build",
    "doc:commit": "git add docs-dist && git commit -n -m 'commit doc file'",
    "doc:pulish-safe": "git subtree push --prefix docs-dist origin gh-pages",
    "doc:pulish": "git push origin `git subtree split --prefix docs-dist master`:gh-pages --force",
    "doc:reset": "git reset --hard HEAD^",
    "prepare": "husky install",
    "build": "bob build",
    "release": "release-it"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "react-native-safe-area-context": "^3.3.2",
    "react-native-svg": "^12.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/runtime": "^7.16.5",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@fruits-chain/eslint-config-rn": "^0.0.4",
    "@react-navigation/bottom-tabs": "^6.0.9",
    "@react-navigation/native": "^6.0.6",
    "@react-navigation/stack": "^6.0.11",
    "@release-it/conventional-changelog": "^3.3.0",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.178",
    "@types/react-native": "^0.66.9",
    "@types/react-test-renderer": "^17.0.1",
    "babel-jest": "^27.4.5",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "core-js": "^3.19.3",
    "dumi": "^1.1.36",
    "dumi-theme-mobile": "^1.1.19",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.2",
    "metro-react-native-babel-preset": "^0.66.2",
    "react": "17.0.2",
    "react-native": "0.66.3",
    "react-native-builder-bob": "^0.18.2",
    "react-native-gesture-handler": "^1.10.3",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-screens": "^3.10.1",
    "react-test-renderer": "17.0.2",
    "release-it": "^14.11.8",
    "typescript": "4.4.4",
    "umi-plugin-react-native": "^0.5.0"
  },
  "resolutions": {
    "@types/react": "^17",
    "prettier": "^2.3.2"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ]
  },
  "lint-staged": {
    "*.{yml,yaml,md}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "bash -c tsc --noEmit",
      "eslint --fix",
      "prettier --write"
    ]
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  }
}
