{
  "name": "react-native-xiaoshu",
  "version": "0.0.1",
  "private": true,
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "react-native": "src/index.ts",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "lib/",
    "src/"
  ],
  "scripts": {
    "android": "react-native run-android",
    "android:demo": "cd android && ./gradlew assembleRelease",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "commit": "npx git-cz",
    "ncu": "npx npm-check-updates -u -x react,react-native,react-test-renderer",
    "lint:ts": "tsc --noEmit && eslint src --ext .ts,.tsx",
    "prettier": "prettier --write '{src,demo}/**/*.{js,json,yml,yaml,ts,tsx,md}'",
    "lint-staged": "lint-staged --allow-empty",
    "doc": "dumi dev",
    "doc:build": "dumi build",
    "doc:commit": "git add docs-dist && git commit -n -m 'commit doc file'",
    "doc:pulish-safe": "git subtree push --prefix docs-dist origin gh-pages",
    "doc:pulish": "git push origin `git subtree split --prefix docs-dist master`:gh-pages --force",
    "doc:reset": "git reset --hard HEAD^",
    "prepare": "husky install",
    "postinstall": "patch-package",
    "build": "bob build"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "react-native-safe-area-context": "^3.3.2",
    "react-native-svg": "^12.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/runtime": "^7.16.0",
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@fruits-chain/eslint-config-rn": "^0.0.4",
    "@react-navigation/bottom-tabs": "^6.0.9",
    "@react-navigation/native": "^6.0.6",
    "@react-navigation/stack": "^6.0.11",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.176",
    "@types/react-native": "^0.66.1",
    "@types/react-test-renderer": "^17.0.1",
    "babel-jest": "^27.3.1",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "core-js": "^3.19.0",
    "dumi": "^1.1.31",
    "dumi-theme-mobile": "^1.1.13",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "metro-react-native-babel-preset": "^0.66.2",
    "patch-package": "^6.4.7",
    "react": "17.0.2",
    "react-native": "0.65.1",
    "react-native-builder-bob": "^0.18.2",
    "react-native-codegen": "^0.0.9",
    "react-native-gesture-handler": "^1.10.3",
    "react-native-keyboard-aware-scroll-view": "^0.9.4",
    "react-native-screens": "^3.9.0",
    "react-test-renderer": "17.0.2",
    "typescript": "^4.4.4",
    "umi-plugin-react-native": "^0.5.0"
  },
  "resolutions": {
    "@types/react": "^17",
    "prettier": "^2.3.2"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ]
  },
  "lint-staged": {
    "*.{yml,yaml,md}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "bash -c tsc --noEmit",
      "eslint --fix",
      "prettier --write"
    ]
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
