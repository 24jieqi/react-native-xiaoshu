{
  "name": "@fruits-chain/react-native-xiaoshu",
  "description": "ðŸŒˆ React Native UI library",
  "version": "0.4.3-beta.0",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "lib/",
    "src/",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/**.md"
  ],
  "keywords": [
    "react-native",
    "ui-components",
    "typescript"
  ],
  "license": "Apache-2.0",
  "homepage": "https://24jieqi.github.io/react-native-xiaoshu",
  "repository": {
    "type": "git",
    "url": "https://github.com/24jieqi/react-native-xiaoshu"
  },
  "bugs": {
    "url": "https://github.com/24jieqi/react-native-xiaoshu/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "test": "jest --forceExit",
    "test:s": "jest ./src/bottom-bar/__tests__ -u --forceExit --coverage",
    "test:coverage": "jest --coverage",
    "test:clear": "jest --clearCache",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "commit": "npx git-cz",
    "ncu": "npx npm-check-updates -u -x react,react-native,react-native-svg,@react-native/babel-preset,react-test-renderer,color,typescript",
    "lint:ts": "tsc --noEmit && eslint src --ext .ts,.tsx",
    "prettier": "prettier --write '{src,demo}/**/*.{js,json,yml,yaml,ts,tsx,md}'",
    "lint-staged": "lint-staged --allow-empty",
    "doc": "dumi dev",
    "doc:github-build": "cross-env PUBLIC_PATH=react-native-xiaoshu/ dumi build",
    "prepare": "husky install && dumi setup",
    "build": "bob build",
    "release": "release-it",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch",
    "release:major:beta": "release-it major --preRelease=beta",
    "release:minor:beta": "release-it minor --preRelease=beta",
    "release:patch:beta": "release-it patch --preRelease=beta",
    "run:publish": "node ./scripts/publish.js"
  },
  "dependencies": {
    "@fruits-chain/design-tokens-bailu": "^0.1.0",
    "@fruits-chain/icons-react-native": "^0.1.9",
    "color": "^3.2.1",
    "fast-deep-equal": "^3.1.3",
    "lodash": "^4.17.21",
    "react-is": "^18.3.1",
    "react-native-popover-view": "^5.1.8",
    "rn-placeholder": "^3.0.3"
  },
  "peerDependencies": {
    "rc-field-form": "*",
    "react-native-safe-area-context": "*",
    "react-native-svg": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@fruits-chain/eslint-config-rn": "0.3.23",
    "@fruits-chain/prettier-config-preset": "^0.0.5",
    "@react-native/babel-preset": "0.74.85",
    "@release-it/conventional-changelog": "^8.0.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "12.7.2",
    "@types/color": "^3.0.6",
    "@types/jest": "^29.5.13",
    "@types/lodash": "^4.17.9",
    "@types/react-is": "^18.3.0",
    "@types/react-test-renderer": "^18.3.0",
    "babel-jest": "^29.7.0",
    "core-js": "^3.38.1",
    "cross-env": "^7.0.3",
    "dumi": "~2.4.12",
    "dumi-theme-mobile": "^2.3.5",
    "expo-dev-menu": "^5.0.21",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "rc-field-form": "^2.4.0",
    "react": "18.2.0",
    "react-native": "0.74.5",
    "react-native-builder-bob": "0.30.2",
    "react-native-safe-area-context": "4.11.0",
    "react-native-svg": "15.4.0",
    "react-native-web": "^0.19.12",
    "react-test-renderer": "18.2.0",
    "release-it": "^17.6.0",
    "ts-jest": "^29.2.5",
    "typescript": "5.0.4"
  },
  "resolutions": {
    "@types/react": "^18",
    "prettier": "~3.2.0"
  },
  "prettier": "@fruits-chain/prettier-config-preset",
  "lint-staged": {
    "*.{yml,yaml,md}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "bash -c tsc --noEmit",
      "eslint --fix",
      "prettier --write"
    ]
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ],
    "exclude": [
      "**/{__tests__,__fixtures__,__mocks__}/**",
      "**/**.md"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": false
      }
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
